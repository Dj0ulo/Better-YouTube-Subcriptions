{
	"name": "Better YouTube Subscriptions",
	"version": "1.0",
	"manifest_version": 3,
	"description": "YouTube Subscriptions of your dream !",
	"icons": {
		"128": "images/icon_128.png",
		"1024": "images/icon_1024.png"
	},
	"permissions": [
		"storage"
	],
	"action": {
		"default_popup": "src/pop-up/index.html"
	},
	"web_accessible_resources": [{
		"resources": [
      "src/style.css"
    ],
    "matches": [
      "*://www.youtube.com/*"
    ]
  }],
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": [
				"*://www.youtube.com/*"
			],
			"js": [
				"src/settings.js",
				"src/utils.js",
				"src/content_script.js"
			]
		}
	]
}